@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using ProjectPRN211.Models
@model TblUser

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login chương trình</title>
    <link rel="stylesheet" href="~/css/main.css" type="text/css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <div class="login-wrapper">
        <form asp-controller="Login" asp-action="Login" method="post">
            <label for="Username">Username</label><br />
            <input type="text" asp-for="Username" id="Username" /><br />
            <span class="text-danger" asp-validation-for="Username"></span><br />
            <label for="Password">Password</label><br />
            <input type="text" asp-for="Pass" id="Password" /><br />
            <span class="text-danger" asp-validation-for="Pass"></span><br />
            <div>
                <button type="submit" class="btn btn-info">OK</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>